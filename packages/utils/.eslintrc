{
  "parser": "babel-eslint",
  "plugins": ["react", "prettier", "jsx-a11y", "import", "@typescript-eslint"],
  "extends": ["react-app", "prettier", "prettier/react", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended"],
  "globals": {
    "expect": true,
    "describe": true,
    "it": true,
    "fixture": true,
    "test": true,
    "jest": true,
    "document": true,
    "window": true,
    "fetch": true,
    "navigator": true
  },
  "rules": {
    "space-before-function-paren": 0,
    "quotes": 0,
    "operator-linebreak": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],
    "react/jsx-tag-spacing": [
      "error",
      {
        "beforeSelfClosing": "always"
      }
    ]
  }
}
