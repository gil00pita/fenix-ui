{
  "compilerOptions": {
    "compileOnSave": true,
    "baseUrl": "./",
    "paths": {
      "antd": ["src/index.tsx"],
      "antd/es/*": ["src/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "lib", "es"],
  "include": ["typings", "src/*", "src/Atoms/Avatar"]
}
